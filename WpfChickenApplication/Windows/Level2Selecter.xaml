        <Image x:Name="Button11" HorizontalAlignment="Left" Height="108" Margin="150,320,0,0" VerticalAlignment="Top" Width="70" Source="/WpfChickenApplication;component/Resources/LevelNumbers/11.png" MouseEnter="letter_MouseEnter" MouseLeave="letter_MouseLeave" MouseDown="letter_MouseDown"/>
        <Image x:Name="Button19" HorizontalAlignment="Left" Height="108" Margin="871,485,0,0" VerticalAlignment="Top" Width="70" Source="/WpfChickenApplication;component/Resources/LevelNumbers/19.png" MouseEnter="letter_MouseEnter" MouseLeave="letter_MouseLeave" MouseDown="letter_MouseDown"/>
        <Image x:Name="Button4" HorizontalAlignment="Left" Height="108" Margin="1015,24,0,0" VerticalAlignment="Top" Width="70" Source="/WpfChickenApplication;component/Resources/LevelNumbers/04.png" MouseEnter="letter_MouseEnter" MouseLeave="letter_MouseLeave" MouseDown="letter_MouseDown"/>
        <Image x:Name="Button12" HorizontalAlignment="Left" Height="108" Margin="449,320,0,0" VerticalAlignment="Top" Width="70" Source="/WpfChickenApplication;component/Resources/LevelNumbers/12.png" MouseEnter="letter_MouseEnter" MouseLeave="letter_MouseLeave" MouseDown="letter_MouseDown"/>
        <Image x:Name="Button20" HorizontalAlignment="Left" Height="108" Margin="1132,485,0,0" VerticalAlignment="Top" Width="70" Source="/WpfChickenApplication;component/Resources/LevelNumbers/20.png" MouseEnter="letter_MouseEnter" MouseLeave="letter_MouseLeave" MouseDown="letter_MouseDown"/>
